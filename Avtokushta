		JButton btnNewButton_3 = new JButton("\u043D\u0430 \u0438\u0437\u043F\u043B\u0430\u0449\u0430\u043D\u0435");
		btnNewButton_3.setFont(new Font("Times New Roman", Font.PLAIN, 14));
		btnNewButton_3.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				cIz.setVisible(true);
				lblNewLabel_12.setVisible(true);
				double cena= 30000;
				if(cCvqt.getSelectedIndex()==3)cena*=0.9;
				
				switch (cGod.getSelectedIndex()) 
				{
					case 2:cena*=0.98;break;
					case 3:cena*=0.95;break;
					case 4:cena*=0.88;break;
					case 5:cena*=0.80;break;
				}
				switch (cKilo.getSelectedIndex()) 
				{
					case 2:cena*=0.97;break;
					case 3:cena*=0.85;break;
					case 4:cena*=0.80;break;
				}
				double izplashtane=0;
				switch (cIz.getSelectedIndex())   //izchislqvane na izplashtaneto
				{
					case 1:izplashtane=cena/6;break;
					case 2:izplashtane=cena/12;break;
					case 3:izplashtane=cena/24;break;
					case 4:izplashtane=cena/36;break;
					case 5:izplashtane=cena/48;break;
					case 6:izplashtane=cena/60;break;
				}
				if(cMarka.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете марка.");
				if(cGod.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете години.");
				if(cKilo.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете километри за километража.");
				if(cCvqt.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете цвят.");
				if(cIz.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете изплащане.");
				double roundOff = Math.round(izplashtane * 100.0) / 100.0;    //zakruglqne
				if(cMarka.getSelectedIndex()!=0&&cGod.getSelectedIndex()!=0&&cKilo.getSelectedIndex()!=0&&cCvqt.getSelectedIndex()!=0&&cIz.getSelectedIndex()!=0) 
				{
				JOptionPane.showMessageDialog(null,"Цената е "+roundOff+" на месец за "+cIz.getSelectedItem());
				}
			}
		});
		btnNewButton_3.setBounds(24, 219, 129, 21);
		contentPane.add(btnNewButton_3);
		
	}
