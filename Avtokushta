		JButton btnNewButton = new JButton("\u041F\u043E\u0440\u044A\u0447\u043A\u0430");
		btnNewButton.setFont(new Font("Times New Roman", Font.PLAIN, 14));
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				//Cherven e 3 index
				double cena= 30000;
				if(cCvqt.getSelectedIndex()==3)cena*=0.9;   //namalenie za cherveni
				
				switch (cGod.getSelectedIndex())  //namalenie sprqmo godinite na kolata
				{
					case 2:cena*=0.98;break;
					case 3:cena*=0.95;break;
					case 4:cena*=0.88;break;
					case 5:cena*=0.80;break;
				}
				switch (cKilo.getSelectedIndex())  //namalenie sprqmo kilometraja
				{
					case 2:cena*=0.97;break;
					case 3:cena*=0.85;break;
					case 4:cena*=0.80;break;
				}
				if(cMarka.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете марка.");
				if(cGod.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете години.");
				if(cKilo.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете километри за километража.");
				if(cCvqt.getSelectedIndex()==0)JOptionPane.showMessageDialog(null, "Изберете цвят.");
				if(cMarka.getSelectedIndex()!=0&&cGod.getSelectedIndex()!=0&&cKilo.getSelectedIndex()!=0&&cCvqt.getSelectedIndex()!=0) 
				{
					String God="",Kilo="";
					
					switch (cGod.getSelectedIndex()) 
					{
					case 1:God="нова ";break;
					case 2:God="сравнително нова ";break;
					case 3:God="не много стара" ;break;
					case 4:God="остаряла ";break;
					case 5:God="стара ";break;
					}
					switch (cKilo.getSelectedIndex()) 
					{
					case 1:Kilo="неизползвана";break;
					case 2:Kilo="малко използвана";break;
					case 3:Kilo="използана";break;
					case 4:Kilo="много използвана";break;
					}
				JOptionPane.showMessageDialog(null, "Вие избрахте "+God+"кола, която е марка "+cMarka.getSelectedItem()+" и е "+Kilo+" и "+ cCvqt.getSelectedItem()+" на цена "+cena);
				}
				
			}
		});
		
		btnNewButton.setBounds(24, 126, 129, 21);
		contentPane.add(btnNewButton);
		
