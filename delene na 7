		JButton btnNewButton = new JButton("\u041F\u0440\u0435\u0441\u043C\u0435\u0442\u043D\u0438");
		btnNewButton.setFont(new Font("Times New Roman", Font.PLAIN, 14));
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				int n=Integer.parseInt(tc.getText());
				int []arr=new int[n/7];
				int proizv=1,sum=0;
				for(int i=0;i<arr.length;i++)arr[i]=(i+1)*7;
				String chisla="";
				for(int i=0;i<arr.length;i++) {chisla=chisla+arr[i]+" ";
				sum+=arr[i];
				proizv*=arr[i];}
				l2.setText(chisla);
				l3.setText(Integer.toString(sum));
				l4.setText(Integer.toString(proizv));
				if(n<=6) {
					l2.setText("");
					l3.setText("");
					l4.setText("");
				}
			}
		});
		btnNewButton.setBounds(45, 191, 107, 21);
		contentPane.add(btnNewButton);
		
		JButton btnNewButton_1 = new JButton("\u0418\u0437\u0447\u0438\u0441\u0442\u0438");
		btnNewButton_1.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {tc.setText("");
			l2.setText("");
			l3.setText("");
			l4.setText("");
			}
		});
		btnNewButton_1.setFont(new Font("Times New Roman", Font.PLAIN, 14));
		btnNewButton_1.setBounds(197, 191, 112, 21);
